<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.xaut.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="cn.edu.xaut.domain.entity.User">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="phone" property="phone" />
        <result column="address" property="address" />
        <result column="register_time" property="registerTime" />
        <result column="email" property="email" />
    </resultMap>
    
    <sql id="Base_Column_List">
        user_id, user_name, phone, address, register_time, email
    </sql>
    
    <select id="selectUserById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM user
        WHERE user_id = #{userId}
    </select>
    
    <select id="selectUserByPhone" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM user
        WHERE phone = #{phone}
    </select>
    
    <select id="selectAllUsers" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM user
    </select>
    
    <insert id="insertUser" parameterType="cn.edu.xaut.domain.entity.User">
        INSERT INTO user (
            user_name, phone, address, register_time, email
        ) VALUES (
            #{userName}, #{phone}, #{address}, #{registerTime}, #{email}
        )
    </insert>
    
    <update id="updateUser" parameterType="cn.edu.xaut.domain.entity.User">
        UPDATE user
        SET
        user_name = #{userName},
        phone = #{phone},
        address = #{address},
        email = #{email}
        WHERE user_id = #{userId}
    </update>
    
    <delete id="deleteUser">
        DELETE FROM user
        WHERE user_id = #{userId}
    </delete>
</mapper>