<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.xaut.mapper.ApptBeautyMapper">

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO apptBeauty (ApptID, BeautyID)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.apptId}, #{item.beautyId})
        </foreach>
    </insert>

    <select id="selectBeautyDetailsByApptId" resultType="cn.edu.xaut.domain.vo.appointment.BeautyDetailVO">
        SELECT
            b.BeautyID as beautyId,
            b.BeautyName as beautyName,
            b.BeautyType as beautyType,
            b.Price as price,
            b.Duration as duration,
            b.BeautyRemarks as beautyRemarks
        FROM apptBeauty ab
        LEFT JOIN beauty b ON ab.BeautyID = b.BeautyID
        WHERE ab.ApptID = #{apptId}
    </select>

</mapper>
