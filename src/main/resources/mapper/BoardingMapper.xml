<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.xaut.mapper.BoardingMapper">
    <!-- Select boarding record by ID -->
    <select id="selectBoardingById" parameterType="java.lang.Integer" resultType="cn.edu.xaut.domain.entity.boarding.BoardingDO">
        SELECT * FROM fosterRecord WHERE FosterID = #{boardingId}
    </select>

    <!-- Select all boarding records -->
    <select id="selectAllBoardings" resultType="cn.edu.xaut.domain.entity.boarding.BoardingDO">
        SELECT * FROM fosterRecord ORDER BY FosterID DESC
    </select>
</mapper>